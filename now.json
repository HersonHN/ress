{
  "version": 2,
  "public": true,
  "alias": ["news.herson.hn"],
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/config",
      "methods": ["GET"],
      "dest": "/index.js",
      "headers": { "cache-control": "no-cache" }
    },
    {
      "src": "/feed/(.*)",
      "methods": ["GET"],
      "dest": "/index.js",
      "headers": { "cache-control": "no-cache" }
    },
    {
      "src": "/api/feed",
      "methods": ["GET"],
      "dest": "/index.js",
      "headers": { "cache-control": "no-cache" }
    },
    {
      "src": "/api/feed/(.*)",
      "methods": ["GET"],
      "dest": "/index.js",
      "headers": { "cache-control": "no-cache" }
    },
    {
      "src": "/api/feeds",
      "methods": ["POST"],
      "dest": "/index.js",
      "headers": { "cache-control": "no-cache" }
    },
    {
      "src": "/api/clean",
      "methods": ["POST"],
      "dest": "/index.js",
      "headers": { "cache-control": "no-cache" }
    },
    {
      "src": "/api/validate-rss",
      "methods": ["POST"],
      "dest": "/index.js",
      "headers": { "cache-control": "no-cache" }
    }
  ],
  "env": {
    "VITE_APP_FIREBASE": "VITE_APP_FIREBASE"
  }
}
